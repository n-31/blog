<!doctype html>
<html {% if section %} data-current="{{ section }}"{% endif %} lang="fr">

	{% include "components/head.njk" %}

	<body>

		<header>
			<em>
				<a href="{{ '/' | url }}">{{ website.title }}</a>
			</em>
			{% include "components/action-bar.njk" %}
			{% include "components/nav.njk" %}
		</header>

		<main id="base-main">
			{{ layoutContent | safe }}
		</main>

		{% include "components/footer.njk" %}

		{% for module in modules %}
			<script type="module" src="/js-modules/{{module}}" defer></script>
		{% endfor %}
	</body>

</html>